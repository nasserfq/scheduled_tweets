<%= form_with model: @tweet do |form| %>
    <%= render "shared/form_errors", form: form %>


    <div class= "mb-3">
        <%= form.label :twitter_account_id %>
        <%= form.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :username, {}, {class: "form-control"} %>
        <%= link_to "Connect your Twitter Account اربط حسابك", "/auth/twitter",  method: :post %>

    </div>

    <div class= "mb-3">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control" %>
    </div>
    <div class= "mb-3">
        <%= form.label :publish_at %>
        <div class ="form-control"> 
            
            <%= form.Time.now.strftime("%I:00") :publish_at %>
        </div>
    </div>

    <%= form.button "Schedule جدول", class: "btn btn-primary" %>
    <% if form.object.persisted? %>
        <%= link_to "Delete حذف", form.object, method: :delete, data: { confirm: "Are you sure? هل أنت متأكد؟" }, class: "btn btn-outline-danger" %>
    <% end %>



<% end %>